<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sign Up â€“ EventScape</title>
  <link rel="stylesheet" href="global.css" />
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <div class="register">
    <!-- Brand -->
    <div class="brand">
      <img class="brand-logo" src="logo.svg" alt="EventScape logo">
      <span class="brand-text">EventScape</span>
    </div>

    <!-- Card -->
    <div class="card">
      <img class="register-big-white" src="register-big-white-square.svg" alt="">

      <!-- Card content laid out in 3 rows: fields | spacer | actions -->
      <div class="card-body">
        <div class="fields">
          <label class="label" for="email">Email</label>
          <input class="field" id="email" type="email" autocomplete="email" required />

          <label class="label" for="password">Password</label>
          <input class="field" id="password" type="password" autocomplete="new-password" required />

          <label class="label" for="displayName">Display Name</label>
          <input class="field" id="displayName" type="text" autocomplete="nickname" />

          <label class="label" for="notif">Notification Preference</label>
          <select class="field" id="notif" name="notification">
            <option value="email">Email Only</option>
            <option value="inapp">In-app Only</option>
            <option value="all">All</option>
            <option value="none">None</option>
          </select>
        </div>

        <div class="actions">
          <a href="./main" class="go-back-link">
            <img class="red-rectangle" src="red-rectangle.svg" alt="">
            <span class="text-wrapper-4">Go Back</span>
          </a>
          <a href="./post-register" class="sign-up-link">
            <img class="green-rectangle" src="green-rectangle.svg" alt="">
            <span class="text-wrapper-3">Sign Up</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>